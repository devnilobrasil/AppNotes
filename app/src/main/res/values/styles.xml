<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner_alert_dialog</item>
    </style>

    <style name="TestTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <style name="CardNoteTheme_Default" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/color_default</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_500</item>
    </style>

    <style name="CardNoteTheme_Red" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/red_400</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_500</item>
    </style>

    <style name="CardNoteTheme_Purple" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/purple_400</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_500</item>
    </style>

    <style name="CardNoteTheme_Green" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/green_400</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_500</item>
    </style>

    <style name="CardNoteTheme_Grey" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/grey_400</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_500</item>
    </style>

    <style name="CardNoteTheme_Orange" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/orange_400</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_500</item>
    </style>

    <style name="CardNoteTheme_Indigo" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/indigo_400</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_500</item>
    </style>

    <style name="CardNoteTheme_Yellow" parent="Widget.MaterialComponents.CardView" >
        <item name="cardBackgroundColor">@color/yellow_400</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey_500</item>
    </style>

    <style name="Titles_Dialog">
        <item name="fontFamily">@font/epilogue</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Texts_Dialog_Reminder">
        <item name="fontFamily">@font/andika</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_600</item>

    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:datePickerStyle">@style/DialogTheme</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/color_default</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorControlActivated">@color/green_400</item>

    </style>

    <style name="DialogTheme" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/color_default</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:minDate">01/01/2000</item>
    </style>

</resources>